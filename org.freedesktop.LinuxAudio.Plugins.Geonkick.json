{
    "id": "org.freedesktop.LinuxAudio.Plugins.Geonkick",
    "branch": "22.08",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//22.08",
    "build-extension": true,
    "appstream-compose": false,
    "build-options": {
        "prepend-path": "/app/extensions/Plugins/Geonkick/bin",
        "prepend-pkg-config-path": "/app/extensions/Plugins/Geonkick/lib/pkgconfig",
        "prefix": "/app/extensions/Plugins/Geonkick"
    },
    "cleanup": [
        "/lib/lv2",
        "/lib/libGLU*"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "rapidjson",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DRAPIDJSON_BUILD_DOC=OFF",
                "-DRAPIDJSON_BUILD_EXAMPLES=OFF",
                "-DRAPIDJSON_BUILD_TESTS=OFF",
                "-DRAPIDJSON_BUILD_THIRDPARTY_GTEST=OFF"
            ],
            "cleanup": [
                "/include",
                "/lib",
                "/share/doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://mirrors.kodi.tv/build-deps/sources/rapidjson-1.1.0.tar.gz",
                    "sha256": "bf7ced29704a1e696fbccf2a2b4ea068e7774fa37f6d7dd4039d0787f8bed98e"
                }
            ]
        },
        {
            "name": "geonkick",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=/app/extensions/Plugins/Geonkick",
                "-DCMAKE_INSTALL_LIBDIR=.",
                "-DGKICK_STANDALONE=NO",
                "-DGKICK_VST3=ON"
            ],
            "build-options": {
                "cxxflags": "-I/app/extensions/Plugins/Geonkick/include",
                "ldflags": "-L/app/extensions/Plugins/Geonkick/lib -L/run/build/geonkick/_flatpak_build/3rdparty/redkite"
            },
            "post-install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/*.so",
                "strip ${FLATPAK_DEST}/vst3/*.vst3/Contents/*-linux/*.so",
                "install -Dm644 ../org.freedesktop.LinuxAudio.Plugins.Geonkick.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose --basename=${FLATPAK_ID} --prefix=${FLATPAK_DEST} --origin=flatpak ${FLATPAK_ID}",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/geonkick ../LICENSE"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/free-sm/geonkick/archive/refs/tags/v2.10.0.tar.gz",
                    "sha256": "cb63e2b81a6e5b45285861fc1a46f03959d6a33f9e3b1c7e7982f6ec4d9f0254"
                },
                {
                    "type": "patch",
                    "path": "geonkick-build-fix.patch"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.Geonkick.metainfo.xml"
                }
            ]
        }
    ]
}
